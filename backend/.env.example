# ===========================================
# Video Warning System - Environment Config
# ===========================================

# App Configuration
APP_NAME=VideoWarningSystem
APP_VERSION=1.0.0
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/video_warning

# JWT Configuration (MUST change in production!)
SECRET_KEY=your-super-secret-key-change-in-production-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage Configuration
DATA_DIR=./data
CAPTURES_DIR=./data/captures
FACES_DIR=./data/faces

# Face Recognition Configuration
FACE_SIMILARITY_THRESHOLD=0.6
ALERT_COOLDOWN_SECONDS=60

# Data Cleanup Configuration
DATA_RETENTION_DAYS=30
CAPTURE_QUALITY=85

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]

# CompreFace Configuration
COMPREFACE_API_URL=http://localhost:8000
